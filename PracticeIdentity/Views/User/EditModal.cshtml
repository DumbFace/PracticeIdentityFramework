@model UserDTO

<form id="registerForm" action="/User/Update" method="post">
    <h2>Phân quyền</h2>
    <div class="form-floating mb-3">
        <input type="hidden" name="Email" value="@Model.Email">
        <input asp-for="@Model.Email" disabled class="form-control" autocomplete="username" aria-required="true"
            placeholder="name@example.com" />
        <label asp-for="@Model.Email">Email</label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="@Model.PhoneNumber" class="form-control" autocomplete="username" aria-required="true"
            placeholder="name@example.com" />
        <label asp-for="@Model.PhoneNumber">Phone Number</label>
    </div>


    @foreach (var item in (List<IdentityRole>)ViewBag.lstRoles)
    {
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="@item.Name" name="Roles" id="Roles" 
                @(Model.Roles.Any(s=> s == item.Name) ? "checked" : "")
            >
            <label class="form-check-label" for="flexCheckDefault">
                @item.Name
            </label>
        </div>
    }

    <input type="submit" value="Submit" class="btn btn-success">
</form>